<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    >
    <include layout="@layout/layout_title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:layout_marginLeft="@dimen/default_margin_4"
        android:layout_marginRight="@dimen/default_margin_4"
        android:layout_marginTop="@dimen/default_margin_2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="名称:"
                android:gravity="center|left"
                android:textSize="@dimen/default_text_size"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/image_important"
                />
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit_no_stroke"
            android:layout_marginLeft="@dimen/default_margin_2"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:layout_marginLeft="@dimen/default_margin_4"
        android:layout_marginRight="@dimen/default_margin_4"
        android:layout_marginTop="@dimen/default_margin_2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="单价:"
                android:gravity="center|left"
                android:textSize="@dimen/default_text_size"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/image_important"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit_no_stroke"
                android:layout_marginLeft="@dimen/default_margin_2"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="元/(kg/个)"
                android:gravity="center|left"
                android:textSize="@dimen/default_text_size"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:layout_marginLeft="@dimen/default_margin_4"
        android:layout_marginRight="@dimen/default_margin_4"
        android:layout_marginTop="@dimen/default_margin_2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="总金额:"
                android:gravity="center|left"
                android:textSize="@dimen/default_text_size"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/image_important"
                />
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edit_no_stroke"
            android:layout_marginLeft="@dimen/default_margin_2"
            android:inputType="number"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/line_color"></View>
    <TextView
        style="@style/defalut_button"
        android:text="提交"
        />
</LinearLayout>
